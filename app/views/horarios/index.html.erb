<%- model_class = Horario -%>
<div class="page-header">
  <h1>Horarios</h1>
  <%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
buscar horario:
<%= hidden_field_tag :direction, params[:direction] %>
 <%= hidden_field_tag :sort, params[:sort] %>
<%= text_field_tag :search, params[:search], :placeholder => "aula, hora, dia" %>
<%= submit_tag "Consultar", :name => nil %>
<% end %>
<% end %>
<br />

<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
cantidad de registros visuales:
<%= text_field_tag :numreg, params[:numreg], :class => 'input-mini' %>

<% end %>
<% end %>
<br />

</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "dia" %></th>
      <th><%= sortable "hora" %></th>
      <th><%= sortable "aula" %></th>
      <th>materia_id</th>
      <th>instructor_id</th>
      <th>curso_id</th>
      <th>actions</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @horarios %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo horario', new_horario_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @horarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total horario : <%= @horarios.total_entries %>
</p>

