<%- model_class = Estudiante -%>
<div class="page-header">
  <h1>Estudiantes</h1>
  <%= form_tag request.path, :method => 'get' do %>
  <%= content_tag :label do %>
  buscar estudiante:
  <%= hidden_field_tag :direction, params[:direction] %>
 <%= hidden_field_tag :sort, params[:sort] %>
  <%= text_field_tag :search, params[:search], :placeholder => "nombre, email, apellidos" %>
  <%= submit_tag "Consultar", :nombre => nil %>
  <% end %>
  <% end %>
  <br />

  <%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
cantidad de registros visuales:
<%= text_field_tag :numreg, params[:numreg], :class => 'input-mini' %>

<% end %>
<% end %>
<br />

</div>
<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "Nombre" %></th>
      <th><%= sortable "apellidos" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "telefono" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "fch_nacimiento" %></th>
      <th><%= sortable "curso" %></th>
      <th>acciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @estudiantes %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Estudiante', new_curso_estudiante_path(@curso), :remote => true %></td>
    </tr>
    <td><%= link_to 'atras', cursos_path, :class => 'btn btn-info' %></td>

  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @estudiantes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total Aprendices : <%= @estudiantes.total_entries %>
</p>




