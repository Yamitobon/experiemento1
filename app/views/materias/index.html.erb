<%- model_class = Materia -%>
<div class="page-header">
  <h1>Materias</h1>
  <%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
buscar Materia:
 <%= hidden_field_tag :direction, params[:direction] %>
 <%= hidden_field_tag :sort, params[:sort] %>
<%= text_field_tag :search, params[:search], :placeholder => "nombre" %>
<%= submit_tag "Consultar", :name => nil %>
<% end %>
<% end %>
<br />

<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
cantidad de registros visuales:
<%= text_field_tag :numreg, params[:numreg], :class => 'input-mini' %>

<% end %>
<% end %>
<br />

</div>


<table class="table table-striped table-bordered table-condensed pretty ">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "nombre" %></th>
      <th>acciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @materias %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nueva materia', new_materia_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @materias, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total materias : <%= @materias.total_entries %>
</p>



