<%- model_class = Curso -%>
<div class="page-header">
  <h3>cursos</h3>
  <%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
buscar curso:
<%= hidden_field_tag :direction, params[:direction] %>
 <%= hidden_field_tag :sort, params[:sort] %>
<%= text_field_tag :search, params[:search], :placeholder => "nombre, ficha" %>
<%= submit_tag "Consultar", :name => nil %>
<% end %>
<% end %>
<br />

<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
cantidad de registros visuales:
<%= text_field_tag :numreg, params[:numreg], :class => 'input-mini' %>

<% end %>
<% end %>
<br />



</div>

<table class="table table-striped table-bordered table-condensed pretty">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "ficha" %></th>
      <th><%= sortable "nombre" %></th>
      <th>acciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @cursos %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Curso', new_curso_path, :remote => true %></td>
    </tr>
  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @cursos, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total cursos : <%= @cursos.total_entries %>
</p>


