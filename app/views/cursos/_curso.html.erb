<tr id=<%= "curso_#{curso.id}" %>>
  <td><%= link_to curso.id, edit_curso_path(curso), :remote => true %></td>
  <td><%= curso.ficha %></td>
  <td><%= curso.nombre %></td>
  <td>
    <%= link_to 'Mostrar', curso, :remote => true, :class => 'btn btn-mini' %>
    <%= link_to 'Editar', edit_curso_path(curso), :remote => true,
        :class => 'btn btn-mini' %>
    <%= link_to 'Eliminar', curso, 
        :data => { :confirm => 'Esta Seguro?' },
        :method => :delete, :remote => true, :class => 'btn btn-mini btn-danger' %>
  </td>
  <td><%= link_to 'estudiantes', curso_estudiantes_path(curso), :class => 'btn btn-mini' %>
  </td>
</tr>