<%- model_class = Instructor -%>
<div class="page-header">
  <h1>Instructores</h1>
  <%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
buscar instructor:
<%= hidden_field_tag :direction, params[:direction] %>
 <%= hidden_field_tag :sort, params[:sort] %>
<%= text_field_tag :search, params[:search], :placeholder => "nombres, email, cedula" %>
<%= submit_tag "Consultar", :name => nil %>
<% end %>
<% end %>
<br />

<%= form_tag request.path, :method => 'get' do %>
<%= content_tag :label do %>
cantidad de registros visuales:
<%= text_field_tag :numreg, params[:numreg], :class => 'input-mini' %>

<% end %>
<% end %>
<br />

</div>
<table class="table table-striped table-bordered table-condensed pretty ">
  <thead>
    <tr>
      <th><%= sortable "id" %></th>
      <th><%= sortable "Nombre" %></th>
      <th><%= sortable "apellidos" %></th>
      <th><%= sortable "cedula" %></th>
      <th><%= sortable "email" %></th>
      <th><%= sortable "direccion" %></th>
      <th><%= sortable "telefono" %></th>
      <th><%= sortable "fch_nacimiento" %></th>
      <th>materia_id</th>
      <th>acciones</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
     <%= render @instructores %>
  </tbody>
  <tfoot>
    <tr>
      <td><%= link_to 'Nuevo Instructor', new_instructor_path, :class => 'btn btn-primary btn-mini' %></td>
    </tr>
  </tfoot>
</table>

<br />
<br />
<div align="center">
<%= will_paginate @instructores, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente
&raquo;' %>
</div>
<p>
Total instructores : <%= @instructores.total_entries %>
</p>

